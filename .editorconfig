# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
charset = utf-8
end_of_line = crlf

[.jshintrc]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.json]
end_of_line = lf
indent_style = space
indent_size = 2